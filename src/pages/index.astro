---
import { firebase } from "@/firebase/config";
import Layout from "@/layouts/Layout.astro";
import { Horarios } from "@/components/app/Horarios";
const firebaseUser = firebase.auth.currentUser;
if (!firebaseUser) {
  return Astro.redirect("/login");
}

const { uid } = firebaseUser;
---

<Layout title="Timely | Inicio">
  <div class="contenedor">
    <div class="fade-up">
      <h1>Inicio</h1>

      <article>
        <p>
          <strong>Bienvenido a Timely</strong>, debajo encontrarás tus horarios
          de clases.
        </p>
        <p>
          <strong>Si aún no tienes horarios</strong>, que esperas para crearlos.
        </p>
      </article>
      <hr />
    </div>
    <div class="fade-up w-full" style="transition-delay: .1s;">
      <!-- <Horarios client:load uid={"7f2F4tfP6LRr11uaBpN4PYoYqrM3"}/> -->
      <Horarios client:load {uid} />
      <hr />
    </div>

    <div class="fade-up" style="transition-delay: .1s;">
      <h1></h1>
    </div>
  </div>
</Layout>

<style>
  .contenedor {
    @apply w-full p-6 sm:p-8 lg:p-10;
  }

  h1 {
    @apply text-blue-400 text-4xl font-bold mb-4;
  }

  h2 {
    @apply text-red-400 text-2xl font-semibold mt-6 mb-2;
  }

  p {
    @apply text-gray-700 text-base leading-relaxed;
  }

  ul {
    @apply list-disc list-inside mb-4;
  }

  li {
    @apply text-gray-600 text-base;
  }
</style>
